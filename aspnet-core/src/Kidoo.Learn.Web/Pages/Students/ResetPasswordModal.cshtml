@page
@using Kidoo.Learn.Enums;
@using Kidoo.Learn.Localization
@using Microsoft.AspNetCore.Authorization
@using Microsoft.Extensions.Localization
@using Volo.Abp.AspNetCore.Mvc.UI.Bootstrap.TagHelpers.Modal
@inject IStringLocalizer<LearnResource> L
@inject IAuthorizationService AuthorizationService
@model Kidoo.Learn.Web.Pages.Students.ResetPasswordModalModel
@{
    Layout = null;
}
<abp-dynamic-form abp-model="UpdatePasswordDto" asp-page="/Students/ResetPasswordModal">
    <abp-modal scrollable="true" size="Small">
        <abp-modal-header title="@L["UpdateStudent"].Value"></abp-modal-header>
        <abp-modal-body>
            <abp-input asp-for="Id" />
            <abp-form-content />
        </abp-modal-body>
        <abp-modal-footer buttons="@(AbpModalButtons.Cancel|AbpModalButtons.Save)"></abp-modal-footer>
    </abp-modal>
</abp-dynamic-form>