@page
@using Kidoo.Learn.Localization
@using Kidoo.Learn.Permissions
@using Microsoft.AspNetCore.Authorization
@using Microsoft.Extensions.Localization
@using Volo.Abp.AspNetCore.Mvc.UI.Layout;
@inject IPageLayout PageLayout
@inject IStringLocalizer<LearnResource> L
@inject IAuthorizationService AuthorizationService
@model Kidoo.Learn.Web.Pages.CourseSectionTopics.IndexModel
@{
    PageLayout.Content.Title = "Sections";
}

@section scripts {
    <abp-script src="/Pages/CourseSectionTopics/Index.js" />
}

<abp-card>
    <abp-card-header>
        <abp-row>
            <abp-column size-md="_6">
                <abp-card-title>@Model.SectionName @L["Topics"]</abp-card-title>
            </abp-column>
            <abp-column size-md="_6" class="text-end">
                <abp-button id="NewCourseSectionTopicButton"
                            text="@L["Add NewCourseSectionTopic"].Value"
                            icon="plus"
                            button-type="Primary" />
            </abp-column>
        </abp-row>
    </abp-card-header>
    <abp-card-body>
        <abp-input id="SectionId" asp-for="SectionId" />
        <abp-input id="CourseId" asp-for="CourseId" />
        <abp-table striped-rows="true" id="CourseSectionTopicTable"></abp-table>
    </abp-card-body>
</abp-card>